
(executable
  (name         main)
  (public_name  fourever)
  (libraries
    dream cmdliner fourever
  )
)

; Dream templates
(rule
 (targets template.ml)
 (deps template.eml.html)
 (action (run dream_eml %{deps} --workspace %{workspace_root})))
