 (action (run dream_eml %{deps} --workspace %{workspace_root})))
(rule
 (targets events_html.ml)
 (deps events_html.eml.html)
 (action (run dream_eml %{deps} --workspace %{workspace_root})))
(rule
 (targets dancers_html.ml)
 (deps dancers_html.eml.html)
 (action (run dream_eml %{deps} --workspace %{workspace_root})))
(rule
 (targets index_html.ml)
 (deps index_html.eml.html)
